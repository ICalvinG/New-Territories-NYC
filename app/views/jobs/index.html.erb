<div id="body">
  <div class="center-align job-info">
  	<span class="job-heading bold">Join the New-Territories Team!</span><br><br>
  	<span class="italic">Looking forward to joining a great team?</span><br><br>
  	We'd love to hear from you! Please submit the following information below. 
  </div>

  <div class="form-box">
    <%= form_for :job, :html => {:class => "col s10"}, url: jobs_path do |f| %>
 
      <div class="row">
        <div class="input-field col s6">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, placeholder: "First Name" %>
        </div>
        <div class="input-field col s6">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, placeholder: "Last Name" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %><br>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
      </div>
      <div class="file-field input-field">
        <%= f.label :resume, class: "btn red lighten-3" %>
          <div class="file-path-wrapper">
            <%= f.file_field :resume, placeholder: "Resume", class: "file-path" %>
          </div>
      </div>
      <div class="row">
        <%= f.submit "Submit", class: "btn submit-button right" %>
      </div>
    <% end %>
  </div>

